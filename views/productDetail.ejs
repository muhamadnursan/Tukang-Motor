<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        .container {
          width: fit-content;
          height: fit-content;
          margin: auto;
          margin-top: 10px;
        }
      </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  </head>
  <body>
    <%- include('Navbar.ejs') %> 
    <div class="container">
        <h1>U Can Motorcycle</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><%=data.name%></td>
                    <td><%=currency(data.price)%></td>
                    <td><%=data.description%></td>
                    <td><img src="<%=data.image%>" alt=""></td>
                    <td><a href="/users/<%=data.id%>/update"><button class="btn btn-primary">Update</button></a></td>
                    <td><a href="/users/<%=data.id%>/delete"><button class="btn btn-danger">Delete</button></a></td>
                </tr>
            </tbody>
            <table class="table table-success">
                <br><br><br>
                <thead>
                    <tr>
                        <th>Posted by</th>
                        <th>Adress</th>
                        <th>Phone Number</th>
                        <th>Last updated</th>
                        <th>Profile Picture</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><%=data.User.Profile.fullName%></td>
                        <td><%=data.User.Profile.address%></td>
                        <td><%=data.User.Profile.phone%></td>
                        <td><%=data.User.Profile.updatedAt%></td>
                        <td><img src="<%=data.User.Profile.image%>" alt=""></td>
                    </tr>
                </tbody>
            </table>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
  </body>
</html>